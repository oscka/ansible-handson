apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: konga-ingress
  namespace: {{KONGA_NAMESPACE}}
  annotations:
    kubernetes.io/ingress.class: {{KONGA_INGRESS_CLASS}}    
spec:
  rules:
  - host: {{KONGA_HOSTNAME}}
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service: 
            name: konga
            port: 
             number: 80